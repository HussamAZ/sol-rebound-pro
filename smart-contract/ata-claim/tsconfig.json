{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist", 
    "rootDir": ".",   
    "module": "NodeNext", // <-- تغيير هنا
    "target": "ES2020", // <-- رفع الهدف قد يساعد
    "esModuleInterop": true,
    "moduleResolution": "NodeNext", // <-- تغيير هنا
    "resolveJsonModule": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strict": false 
  },
  "include": [
    "src/**/*.ts", 
    "tests/**/*.ts" 
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}